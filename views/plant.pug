extends layout

block content
  h1= title
  - const plant = ['plant_type','size','age']
  - const x = results
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each result, index in plant
        div(class='col-sm-2' onclick='buy('+index+')') #{result}
    div(class='row')
      each result, index in x
        div(class='row')
          div(class='col-sm-2' onclick='buy('+index+')') #{result.plant_type}
          div(class='col-sm-2' onclick='buy('+index+')') #{result.size}
          div(class='col-sm-2' onclick='buy('+index+')') #{result.age}